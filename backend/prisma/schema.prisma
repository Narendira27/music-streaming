generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/prod.db"
}

model User {
  id String @default(uuid()) @unique
  name String
  email String @unique
  password String 
  songs Song[]
} 

model Song {
  id String @default(uuid()) @unique
  title String 
  youtubeUrl String
  duration String
  filePath String
  fileName String
  user User @relation(fields: [userId],references: [id])
  userId String 
}